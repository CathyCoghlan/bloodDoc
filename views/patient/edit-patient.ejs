<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/form.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <%- include('../includes/sub-nav.ejs') %>

    <div class="wrapper">
        <div class="registration_form">
            <div class="title">
                Patient Registration Form
            </div>
    
            <form action="<% if (editing) { %>edit-patient<% } else { %>add-patient<% } %>" method="POST">
                <div class="form_wrap">
                    <div class="input_grp">
                        <div class="input_wrap">
                            <label for="firstName">First Name</label>
                            <input class="<%= validationErrors.find(e => e.param === 'email')  ? 'invalid' : '' %>" type="text" name="firstName" id="firstName" value="<% if (editing || hasError ) { %><%= patient.firstName %><% } %>">
                        </div>
                        <div class="input_wrap">
                            <label for="lastName">Last Name</label>
                            <input type="text" name="lastName" id="lastName" value="<% if (editing || hasError) { %><%= patient.lastName %><% } %>">
                        </div>
                       
                    </div>
                    <div class="input_wrap">
                            <label for="dateOfBirth">Date of Birth</label>
                            <input type="date" name="dateOfBirth" id="dateOfBirth" value="<% if (editing || hasError) { %><%= patient.dateOfBirth %><% } %>">
                    </div>                    
                    <div class="input_wrap">
                            <label for="email">Email Address</label>
                            <input type="text" name="email" id="email" value="<% if (editing || hasError) { %><%= patient.email %><% } %>">
                    </div>
                    <div class="input_wrap">
                        <label>Gender</label>
                        <ul>
                            <li>
                                <label class="radio_wrap">
                                    <input type="radio" name="gender" value="Male" class="input_radio" checked>
                                    <span>Male</span>
                                </label>
                            </li>
                            <li>
                                <label class="radio_wrap">
                                    <input type="radio" name="gender" value="Female" class="input_radio">
                                    <span>Female</span>
                                </label>
                            </li>
                        </ul>
                    </div>
                    <div class="input_wrap">
                            <label for="address">Address</label>
                            <input type="text" name="address" id="address" value="<% if (editing || hasError) { %><%= patient.address %><% } %>">
                    </div>                    
                    <div class="input_wrap">
                            <label for="county">County</label>
                            <input type="text" name="county" id="county" value="<% if (editing || hasError) { %><%= patient.county %><% } %>">
                    </div>
                    <div class="input_wrap">
                            <label for="eircode">Eircode</label>
                            <input type="text" name="eircode" id="eircode" value="<% if (editing || hasError) { %><%= patient.eircode %><% } %>">
                    </div>
                    <% if (errorMessage) { %>
                        <div class="user-message user-message--error"><p><%= errorMessage %></p></div>
                    <% } %>

                    <div class="input_wrap">

                        <% if (editing) { %>
                            <input type="hidden" value="<%= patient._id %>" name="patientId">
                        <% } %>

                        <button class="submit_btn" type="submit"><% if (editing || hasError) { %>Update Patient<% } else { %>Register<% } %></button>

                    </div>
                </div>
            </form>
        </div>
    </div>

<%- include('../includes/end.ejs') %>