<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/form.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <div class="wrapper">
        <div class="registration_form">
            <div class="title">
                Patient Registration Form
            </div>
    
            <form action="" method="POST">
                <div class="form_wrap">
                    <div class="input_grp">
                        <div class="input_wrap">
                            <label for="firstName">First Name</label>
                            <input type="text" name="firstName" id="firstName" value="<%= patient.firstName %>">
                        </div>
                        <div class="input_wrap">
                            <label for="lastName">Last Name</label>
                            <input type="text" name="lastName" id="lastName" value="<%= patient.lastName %>">
                        </div>
                        
                    </div>
                    <div class="input_wrap">
                            <label for="dateOfBirth">Date of Birth</label>
                            <input type="text" name="dateOfBirth" id="dateOfBirth" value="<%= patient.dateOfBirth %>">
                    </div>                    
                    <div class="input_wrap">
                            <label for="email">Email Address</label>
                            <input type="text" name="email" id="email" value="<%= patient.email %>">
                    </div>
                    <div class="input_wrap">
                        <label>Gender</label>
                        <ul>
                            <li>
                                <label class="radio_wrap">
                                    <input type="radio" name="gender" value="male" class="input_radio" checked>
                                    <span>Male</span>
                                </label>
                            </li>
                            <li>
                                <label class="radio_wrap">
                                    <input type="radio" name="gender" value="female" class="input_radio">
                                    <span>Female</span>
                                </label>
                            </li>
                        </ul>
                    </div>
                    <div class="input_wrap">
                            <label for="address">Address</label>
                            <input type="text" name="address" id="address" value="<%= patient.address %>">
                    </div>                    
                    <div class="input_wrap">
                            <label for="county">County</label>
                            <input type="text" name="county" id="county" value="<%= patient.county %>">
                    </div>
                    <div class="input_wrap">
                            <label for="eircode">Eircode</label>
                            <input type="text" name="eircode" id="eircode" value="<%= patient.eircode %>">
                    </div>
                    <div class="input_wrap">
                        <input type="hidden" value="" name="patientId">
                        <button class="submit_btn" type="submit">Update</button>
                        
                    </div>
                </div>
            </form>
        </div>
    </div>

<%- include('../includes/end.ejs') %>