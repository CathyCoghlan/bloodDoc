<%- include('../includes/head.ejs') %>
    
<link rel="stylesheet" href="/css/my-account.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

        <div class="wrapper">
                <div class="left">
                    <div class="userIcon"><i class="flaticon-user-3"></i></div>
                    <h4><%= patient.firstName %> <%= patient.firstName %></h4>
                    <p>Patient Information</p>
                  </div>
                  <div class="right">
                    <div class="info">
                      <h3>Patient Information</h3>
                      <div class="user_info">
                        <div class="data">
                          <h4>Name</h4>
                          <p><%= patient.firstName %> <%= patient.firstName %></p>
                          <h4>D.O.B</h4>
                          <p><%= patient.dateOfBirth %></p>
                        
                        </div>
                        <div class="data">
                          <h4>Gender</h4>
                          <p><%= patient.gender %></p>
                        </div>
                      </div>
                    </div>
                    <div class="practice">
                      <h3>Clinical Information</h3>
                      <div class="practice_info">
                        <div class="data">
                          <h4>Height</h4>
                          <p><%= patient.address %></p>
                          <h4>Weight</h4>
                          <p><%= patient.county %></p>
                        </div>
                        <div class="data">
                          <h4>Last Bloods</h4>
                          <p><%= patient.eircode %></p>              
                        </div>
                        
                      </div>
                    </div>
                    <div class="update">
                      <form action="/my-account-edit">
                        <button class="updateBtn" type="submit">Update</button>
                      </form>
                    </div>
                  </div>

        </div>

        
         <%- include('../includes/end.ejs') %>