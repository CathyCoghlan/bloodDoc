<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/register.css">
<link rel="stylesheet" href="/css/card.css">
</head>

<body>

    <div class="wrapper">
        <!-- <div class="logo">
            <div class="item">
              <i class="flaticon-test-tube"></i>
